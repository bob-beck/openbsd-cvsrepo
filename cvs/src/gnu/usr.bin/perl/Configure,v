#include <stdio.h>
int main() {
    $uvtype k = ($uvtype)~0, l;
    $nvtype d;
    l = k;
    d = ($nvtype)l;
    l = ($uvtype)d;
    if (l == k)
       printf("preserve\n");
    exit(0);
}
EOP
