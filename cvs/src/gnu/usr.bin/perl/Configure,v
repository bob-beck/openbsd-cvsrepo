	for (i = 1000; i; i--) {
		tmp = (unsigned long)rand();
		if (tmp > max) max = tmp;
	}
	for (i = 0; max; i++)
		max /= 2;
	printf("%d\n",i);
}
EOCP
	set try
	if eval $compile_ok; then
		dflt=`./try$_exe`
	else
		dflt='?'
		echo "(I can't seem to compile the test program...)"
	fi
	;;
*)
	dflt="$randbits"
	;;
esac
rp='How many bits does your rand() function produce?'
. ./myread
randbits="$ans"
$rm -f try.* try

