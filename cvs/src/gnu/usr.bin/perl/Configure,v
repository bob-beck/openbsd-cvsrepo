	check("-18446744073709551615",                     1LL, 0);
       	check("-18446744073709551616", 18446744073709551615ULL, ERANGE);
	check("-18446744073709551617", 18446744073709551615ULL, ERANGE);
#endif
	if (!bad)
		printf("ok\n");
	return 0;
}
EOCP
