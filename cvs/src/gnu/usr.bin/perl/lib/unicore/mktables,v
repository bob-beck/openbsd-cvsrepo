sub _operator_dot_equal {
    # Overloaded '.=' method that is common to all packages.

    my $self = shift;
    my $other = shift;
    my $reversed = shift;
    Carp::carp_extra_args(\@@_) if main::DEBUG && @@_;

    $other = "" unless defined $other;

    if ($reversed) {
        return $other .= "$self";
    }
    else {
        return "$self" . "$other";
    }
}

