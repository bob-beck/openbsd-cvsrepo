    sub value_of {
        # Returns the value associated with the code point, undef if none

        my $self = shift;
        my $codepoint = shift;
        Carp::carp_extra_args(\@@_) if main::DEBUG && @@_;

        my $range = $self->containing_range($codepoint);
        return unless defined $range;

        return $range->value;
    }

