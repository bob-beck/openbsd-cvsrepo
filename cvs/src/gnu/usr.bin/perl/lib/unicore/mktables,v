    sub display_chr {
        # Converts an ordinal character value to a displayable string, using a
        # NBSP to hold combining characters.

        my $ord = shift;
        my $chr = chr $ord;
        return $chr if $ccc->table(0)->contains($ord);
        return chr(utf8::unicode_to_native(0xA0)) . $chr;
    }

