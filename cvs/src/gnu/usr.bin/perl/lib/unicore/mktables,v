d18599 5
a18615 10
# loc_tools.pl requires this function to be defined
sub ok($@@) {
    my ($pass, @@msg) = @@_;
    print "not " unless $pass;
    print "ok ";
    print ++$Tests;
    print " - ", join "", @@msg if @@msg;
    print "\n";
}

