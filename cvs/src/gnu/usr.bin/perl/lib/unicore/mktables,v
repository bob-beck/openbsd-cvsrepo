               "# ",scalar($count+1)," output files\n\n",
               "# End list\n";  
    close $ofh 
        or warn "Failed to close $ofh: $!";
    
    print "Filelist has ",scalar(@@input)," input files and ",
          scalar($count+1)," output files\n"
        if $Verbose;
}
print "All done\n" if $Verbose;
@


