STATIC OP *
S_is_inplace_av(pTHX_ OP *o, OP *oright) {
    OP *o2;
    OP *oleft = NULL;

    PERL_ARGS_ASSERT_IS_INPLACE_AV;

    if (!oright ||
	(oright->op_type != OP_RV2AV && oright->op_type != OP_PADAV)
	|| oright->op_next != o
	|| (oright->op_private & OPpLVAL_INTRO)
    )
	return NULL;
