a159 24
STATIC U8*
S_trlist_upgrade(pTHX_ U8** sp, U8** ep)
{
    U8 *s = *sp;
    U8 *e = *ep;
    U8 *d;

    Newz(801, d, (e - s) * 2, U8);
    *sp = d;

    while (s < e) {
        if (*s < 0x80 || *s == 0xff)
            *d++ = *s++;
	else {
            U8 c = *s++;
            *d++ = ((c >> 6)         | 0xc0);
            *d++ = ((c       & 0x3f) | 0x80);
        }
    }
    *ep = d;
    return *sp;
}
  

