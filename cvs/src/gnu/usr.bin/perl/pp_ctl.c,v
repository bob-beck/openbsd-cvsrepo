    if (!cx) {
	if (GIMME != G_ARRAY) {
	    EXTEND(SP, 1);
	    RETPUSHUNDEF;
	}
	RETURN;
    }

    stash_hek = HvNAME_HEK((HV*)CopSTASH(cx->blk_oldcop));
