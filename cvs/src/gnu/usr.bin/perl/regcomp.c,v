d12131 1
d12137 4
a12186 25
 - regcurly - a little FSA that accepts {\d+,?\d*}
 */
#ifndef PERL_IN_XSUB_RE
I32
Perl_regcurly(register const char *s)
{
    PERL_ARGS_ASSERT_REGCURLY;

    if (*s++ != '{')
	return FALSE;
    if (!isDIGIT(*s))
	return FALSE;
    while (isDIGIT(*s))
	s++;
    if (*s == ',')
	s++;
    while (isDIGIT(*s))
	s++;
    if (*s != '}')
	return FALSE;
    return TRUE;
}
#endif

