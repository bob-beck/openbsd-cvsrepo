        	    if (unilen > 0) {
        	       s   += unilen;
        	       len += unilen;
        	    }
        	}
	    } else {
                len++;
                REGC(*p, s++);
            }
        }
        if (SIZE_ONLY) {
            RExC_size += STR_SZ(len);
        } else {
