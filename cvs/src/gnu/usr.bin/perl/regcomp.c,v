/* return atoi(p), unless it's too big to sensibly be a backref,
 * in which case return I32_MAX (rather than possibly 32-bit wrapping) */

static I32
S_backref_value(char *p)
{
    char *q = p;

    for (;isDIGIT(*q); q++); /* calculate length of num */
    if (q - p == 0 || q - p > 9)
        return I32_MAX;
    return atoi(p);
