a2412 11
STATIC void
S_put_byte(pTHX_ SV *sv, int c)
{
    if (c <= ' ' || c == 127 || c == 255)
	Perl_sv_catpvf(aTHX_ sv, "\\%o", c);
    else if (c == '-' || c == ']' || c == '\\' || c == '^')
	Perl_sv_catpvf(aTHX_ sv, "\\%c", c);
    else
	Perl_sv_catpvf(aTHX_ sv, "%c", c);
}

