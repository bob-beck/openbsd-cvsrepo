                        if (numlen > 0) {
                            const STRLEN unilen = reguni(pRExC_state, uvc, s);
                            s       += unilen;
                            len     += unilen;
                            /* In EBCDIC the numlen
                            * and unilen can differ. */
                            foldbuf += numlen;
                            if (numlen >= foldlen)
                                break;
                        }
                        else
                            break; /* "Can't happen." */
