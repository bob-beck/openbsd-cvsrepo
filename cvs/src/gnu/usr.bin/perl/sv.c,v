STATIC void
sv_check_thinkfirst(register SV *sv)
{
    if (SvREADONLY(sv)) {
	dTHR;
	if (PL_curcop != &PL_compiling)
	    croak(no_modify);
    }
    if (SvROK(sv))
	sv_unref(sv);
}
    
