	GvNAME(sv)	= 0;
	GvNAMELEN(sv)	= 0;
	GvSTASH(sv)	= 0;
	GvFLAGS(sv)	= 0;
	break;
    case SVt_PVBM:
	SvANY(sv) = new_XPVBM();
	SvPV_set(sv, pv);
	SvCUR_set(sv, cur);
	SvLEN_set(sv, len);
	SvIV_set(sv, iv);
	SvNV_set(sv, nv);
	SvMAGIC_set(sv, magic);
	SvSTASH_set(sv, stash);
	BmRARE(sv)	= 0;
	BmUSEFUL(sv)	= 0;
	BmPREVIOUS(sv)	= 0;
	break;
    case SVt_PVFM:
	SvANY(sv) = new_XPVFM();
