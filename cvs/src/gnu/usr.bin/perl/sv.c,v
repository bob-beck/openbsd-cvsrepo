	SvPV_set(sv, pv);
	SvCUR_set(sv, cur);
	SvLEN_set(sv, len);
	SvIV_set(sv, iv);
	SvNV_set(sv, nv);
	SvMAGIC_set(sv, magic);
	SvSTASH_set(sv, stash);
	break;
