pooltype       = ( "bitmask" | "random" |
                 "source-hash" [ ( hex-key | string-key ) ] |
                 "round-robin" )

subqueue       = string | "{" queue-list "}"
queue-list     = string [ [ "," ] string ]
cbq-def        = "cbq" [ "(" cbq-type [ [ "," ] cbq-type ] ")" ]
cbq-type       = ( "default" | "control" | "borrow" |
                 "red" | "ecn" | "rio" )
