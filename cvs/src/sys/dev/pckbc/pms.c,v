and ian@@.
@
text
@d1 1
a1 1
/* $OpenBSD: pms.c,v 1.7 2010/10/02 00:28:57 krw Exp $ */
a169 2
	u_char cmd[1], resp[2];
	int res;
a174 16

	/* Flush any garbage. */
	pckbc_flush(pa->pa_tag, pa->pa_slot);

	/* reset the device */
	cmd[0] = PMS_RESET;
	res = pckbc_poll_cmd(pa->pa_tag, pa->pa_slot, cmd, 1, 2, resp, 1);
#ifdef DEBUG
	if (res || resp[0] != PMS_RSTDONE || resp[1] != 0) {
		printf("pmsattach: reset error\n");
		return;
	}
#endif

	sc->inputstate = 0;
	sc->oldbuttons = 0;
