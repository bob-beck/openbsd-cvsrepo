      {
        struct in6_addr addr = IN6ADDR_SN_PREFIX_INIT;

	addr.s6_addr[13] = i6a->i6a_addr.sin6_addr.s6_addr32[13];
	addr.s6_addr[14] = i6a->i6a_addr.sin6_addr.s6_addr32[14];
	addr.s6_addr[15] = i6a->i6a_addr.sin6_addr.s6_addr32[15];
