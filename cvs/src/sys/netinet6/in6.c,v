      if (ipv6forwarding) {
        struct in6_addr addr = IN6ADDR_ALLROUTERS_INIT;

	rc = in6_addmulti(&addr, ifp);
      };

      {
        struct in6_addr addr = IN6ADDR_ALLHOSTS_INIT;

        rc = in6_addmulti(&addr, ifp);
      };

