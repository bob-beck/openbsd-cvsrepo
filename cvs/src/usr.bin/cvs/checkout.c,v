static void
checkout_write_revision(RCSFILE *rfp, RCSNUM *rev, char *template)
{
	int fd;

	if ((fd = mkstemp(template)) == -1)
		fatal("mkstemp: '%s': %s", template, strerror(errno));

	cvs_worklist_add(template, &temp_files);
	rcs_rev_write_fd(rfp, rev, fd, 0);
	(void)close(fd);
@


