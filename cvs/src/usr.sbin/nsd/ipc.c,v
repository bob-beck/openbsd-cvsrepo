static void
ipc_child_quit(struct nsd* nsd)
{
	/* call shutdown and quit routines */
	nsd->mode = NSD_QUIT;
#ifdef	BIND8_STATS
	bind8_stats(nsd);
#endif /* BIND8_STATS */
	server_shutdown(nsd);
	exit(0);
}

