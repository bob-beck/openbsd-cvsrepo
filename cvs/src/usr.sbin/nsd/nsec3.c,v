		process_prehash_domain(d, zone);
	}
	/* clear prehash list */
	prehash_clear(db->domains);
a701 5
	if(!check_apex_soa(db, zone)) {
		zone->nsec3_param = NULL;
		zone->nsec3_last = NULL;
	}
}
