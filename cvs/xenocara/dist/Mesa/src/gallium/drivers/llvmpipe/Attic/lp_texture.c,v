llvmpipe_get_tex_surface(struct pipe_screen *screen,
                         struct pipe_texture *pt,
                         unsigned face, unsigned level, unsigned zslice,
                         unsigned usage)
a517 1
   struct llvmpipe_texture *lpt = llvmpipe_texture(pt);
d520 1
a520 1
