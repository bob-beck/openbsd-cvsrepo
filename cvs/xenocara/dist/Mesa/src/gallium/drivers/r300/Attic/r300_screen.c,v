static void r300_fence_reference(struct pipe_screen *screen,
                                 struct pipe_fence_handle **ptr,
                                 struct pipe_fence_handle *fence)
d313 2
a314 7
    struct r300_fence **oldf = (struct r300_fence**)ptr;
