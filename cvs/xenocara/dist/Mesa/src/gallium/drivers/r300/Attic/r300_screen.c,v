static int r300_fence_finish(struct pipe_screen *screen,
                             struct pipe_fence_handle *fence,
                             unsigned flags)
{
    struct r300_fence *rfence = (struct r300_fence*)fence;

    r300_finish(rfence->ctx);
    rfence->signalled = TRUE;
    return 0; /* 0 == success */
}

