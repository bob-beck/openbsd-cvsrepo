Bool
ephyrScreenInit(KdScreenInfo * screen)
{
    EphyrScrPriv *scrpriv;

    scrpriv = calloc(1, sizeof(EphyrScrPriv));

    if (!scrpriv)
        return FALSE;

    screen->driver = scrpriv;

    if (!ephyrScreenInitialize(screen, scrpriv)) {
        screen->driver = 0;
        free(scrpriv);
        return FALSE;
    }

    return TRUE;
}

